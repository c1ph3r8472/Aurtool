#
#
#

OP=$1
USR="$(whoami)"


if [ "$USR" == root ]
then
  echo "Error: aurtool cannot be run as root!"
  exit 1
fi

if [ "$OP" == -Ss ]
then
  package-query -A -s ${@:2}
fi

if [ "$OP" == -S ]
then
  for b in ${@:2}
  do
    cd $HOME
    mkdir tmp
    cd tmp
    git clone http://aur.archlinux.org/$b.git
    cd $b
    makepkg -csi
    if [ $? -eq 1 ] 
    then
      echo "Error! Aborting"
      cd $HOME/tmp
      exit 1
    fi  
    cd $HOME/tmp
  done
  echo "Build files and / or built packages are stored in a tmp folder in your home directory. Would you like to delete them? "
  read ANSWER
  if [ $ANSWER == y ] || [ $ANSWER == Y ] || [ $ANSWER == yes ] || [ $ANSWER == Yes ] || [ $ANSWER == YES ]
  then
    echo "Cleaning up.."
    rm -rf $HOME/tmp
  fi
fi 

if [ "$OP" == -Sy ]
then
  package-query -A -u
fi

